<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/colored_bar6"
            android:layout_width="match_parent"

            android:layout_height="80dp"
            android:background="@color/purple_500"
            android:stateListAnimator="@null"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.993" />

        <Button
            android:id="@+id/stopButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:background="@color/purple_500"
            android:onClick="onStop"
            android:stateListAnimator="@null"
            android:text="Stop"
            android:textColor="@color/white"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.907"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.843" />


        <Button
            android:id="@+id/startTimer8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentBottom="true"
            android:background="@color/purple_500"
            android:onClick="onClickStartTimer"
            android:stateListAnimator="@null"
            android:text="Go"
            android:textColor="@color/white"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.034"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.843" />

        <Button
            android:id="@+id/statistics2"
            android:layout_width="107dp"
            android:layout_height="76dp"

            android:layout_marginBottom="8dp"
            android:background="@color/purple_500"
            android:onClick="onClickMyStats"
            android:stateListAnimator="@null"
            android:text="Stats"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.673"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="105dp"
            android:layout_height="76dp"
            android:layout_marginBottom="8dp"

            android:background="@color/purple_500"
            android:onClick="OnClickView"
            android:stateListAnimator="@null"
            android:text="View "
            android:textColor="@color/white"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/trophycase2"
            android:layout_width="110dp"
            android:layout_height="76dp"
            android:layout_marginBottom="8dp"

            android:background="@color/purple_500"
            android:onClick="onClickManual"
            android:stateListAnimator="@null"
            android:text="Manual"
            android:textColor="@color/white"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.33"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button4"
            android:layout_width="105dp"
            android:layout_height="76dp"
            android:layout_marginBottom="8dp"

            android:background="@color/purple_500"
            android:onClick="onClickMyTrophies"
            android:stateListAnimator="@null"
            android:text="Trophy"
            android:textColor="@color/white"
            map:iconPadding="3dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="1.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="1.0" />

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="545dp"
                tools:context=".MapsActivity" />


            <Chronometer
                android:id="@+id/simpleChronometer"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="187dp"
                android:layout_marginBottom="107dp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/distanceTextt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="127dp"
                android:layout_marginBottom="138dp"
                android:text="Distance:"
               />

            <TextView
                android:id="@+id/distanceText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_alignParentBottom="true"
                android:layout_marginStart="186dp"
                android:layout_marginBottom="139dp" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="127dp"
                android:layout_marginBottom="106dp"

                android:text="Time: "
                android:visibility="visible"
                tools:layout_editor_absoluteY="701dp"
                tools:visibility="visible" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>